<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="ChannelItemCardStyle">
        <!-- Background and shape customization -->
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">20dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">2dp</item>

        <!-- Ripple effect on click/focus -->
        <item name="android:foreground">?attr/selectableItemBackground</item>

        <!-- Add focusable and clickable attributes for DPAD navigation -->
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>

        <!-- Animations for DPAD focus -->
        <item name="android:stateListAnimator">@animator/channel_card_animator</item>
    </style>

</resources>